<h1 class="title">Past Events</h1>
    <div class="card__container">
        <% @events.past_events.each do | event |%>
                <div class="event__card">
                    <p>
                        <%= link_to event.name, event, class:"event__title"%>
                    </p>
                    <p>
                        <%= event.date.strftime("%B")[0,3] %> &nbsp;
                    </p>
                    <p>
                        <%= event.date.year %> &nbsp; &nbsp;
                    </p>
                    <p class="seemore">
                        <%= link_to 'see more...', event, class: 'button' %> &nbsp; &nbsp;
                    </p>
                </div>
        <% end %>
    </div>
